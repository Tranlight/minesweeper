<div class="container mt-5">
  <h1 class="text-center">Minesweeper Board Generator</h1>

  <!-- Board Generation Form -->
  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      <%= form_with model: @board, url: boards_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :email, "Your Email" %>
          <%= form.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :name, "Board Name" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :width, "Board Width" %>
          <%= form.number_field :width, class: "form-control", min: 1, required: true %>
        </div>

        <div class="form-group">
          <%= form.label :height, "Board Height" %>
          <%= form.number_field :height, class: "form-control", min: 1, required: true %>
        </div>

        <div class="form-group">
          <%= form.label :total_mines, "Number of Mines" %>
          <%= form.number_field :total_mines, class: "form-control", min: 1, required: true %>
        </div>

        <%= form.submit "Generate Board", class: "btn btn-primary btn-block mt-3" %>
      <% end %>
    </div>
  </div>

  <!-- Recent Boards -->
  <div class="row mt-5">
    <div class="col">
      <h2>Recent Boards</h2>
      <ul class="list-group">
        <% @recent_boards.each do |board| %>
          <li class="list-group-item">
            <strong><%= link_to board.name, board_path(board) %></strong> 
            by <%= board.email %> on <%= board.created_at.strftime("%B %d, %Y %H:%M") %>
          </li>
        <% end %>
      </ul>
      <%= link_to "View all generated boards", boards_path, class: "btn btn-link mt-3" %>
    </div>
  </div>
</div>
