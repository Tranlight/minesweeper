<div class="container my-5">
  <div class="text-center">
    <h1 class="mb-4 display-4">Minesweeper Boards</h1>
  </div>

  <!-- Boards Table -->
  <div class="table-responsive shadow-sm">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Size</th>
          <th>Total Mines</th>
          <th>Creator Email</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @boards.each do |board| %>
          <tr>
            <td><%= link_to board.name, board_path(board), class: 'text-decoration-none' %></td>
            <td><%= number_with_delimiter(board.width) %> x <%= number_with_delimiter(board.height) %></td>
            <td><%= number_with_delimiter(board.total_mines) %></td>
            <td><%= board.email %></td>
            <td><%= board.created_at.strftime('%B %d, %Y %H:%M') %></td>
            <td>
              <%= link_to 'View', board_path(board), class: 'btn btn-sm btn-info text-white' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @boards %>
  </div>

  <!-- Back to Home Link -->
  <div class="mt-4 text-center">
    <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
  </div>
</div>
