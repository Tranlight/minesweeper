<div class="container mt-5">
  <h1 class="mb-4">Minesweeper Boards</h1>
  
  <!-- Search Form -->
  <form method="get" action="<%= boards_path %>" class="mb-4">
    <div class="input-group">
      <input type="text" name="query" class="form-control" placeholder="Search by board name or email..." value="<%= params[:query] %>">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>
  
  <!-- Boards Table -->
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Creator Email</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td><%= link_to board.name, board_path(board) %></td>
          <td><%= board.email %></td>
          <td><%= board.created_at.strftime('%B %d, %Y %H:%M') %></td>
          <td>
            <%= link_to 'View', board_path(board), class: 'btn btn-sm btn-info' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Pagination -->
  <!-- paginate @boards -->

  <!-- Back to Home Link -->
  <div class="mt-4">
    <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
  </div>
</div>
